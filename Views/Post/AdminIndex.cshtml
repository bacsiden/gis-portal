@using Webdiyer.WebControls.Mvc
@model PagedList<NationalIT.Post>
<div class="row-fluid">
    <div class="span12">
        <h3>Bài đăng bất động sản</h3>
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="wrap-selectTripInfo">
                        <div class="span2">
                            Trạng thái<br />
                            <select name="loaiID" class="filter-post select-status" style="width:110px">
                                <option value="1">Chờ duyệt</option>
                                <option value="2">Đã duyệt</option>
                                @*<option value="3">Đã gỡ</option>*@
                                <option selected="selected" value="">Tất cả</option>
                            </select>
                        </div>
                        <div class="span2">
                            Hình thức<br />
                            <select name="hinhthuc" class="filter-post select-hinhthuc" style="width:110px">
                                <option value="1">Cần bán</option>
                                <option value="2">Cần mua</option>
                                <option value="3">Cho thuê</option>
                                <option selected="selected" value="">Tất cả</option>
                            </select>
                        </div>
                        <div class="span2">
                            Tin nổi bật<br />
                            <select name="noibat" class="filter-post select-noibat" style="width:90px">
                                <option value="1">Nổi bật</option>
                                <option selected="selected" value="">Tất cả</option>
                            </select>
                        </div>
                        <div class="span4">
                            Loại bất động sản
                            <select name="loaiID" class="filter-post select-loai">
                                @Html.Raw(ViewBag.dataLoai)
                            </select>
                        </div>
                        <div class="cleardiv">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="wrap-AjaxPaging">
            @Html.Partial("_AdminIndexPartial", Model)
        </div>
    </div>
</div>
