@model NationalIT.HtmlPage
<link rel="stylesheet" type="text/css" href="/Content/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.css" />
<h3>
    Html page</h3>
@*<div class="span12">*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)                    

    @Html.HiddenFor(model => model.ID)
        
    <div class="control-group">
        <label class="control-label" for="Address">
            Key url</label>
        <div class="controls">
            <div class="span12">
                @Html.TextBoxFor(model => model.KeyUrl, new { @class = "input-xlarge" })
            </div>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Nội dung</label>
        <div class="controls">
            @Html.TextAreaFor(model => model.Content, new { @class = "span8 wysihtml5", Rows = "15" })
        </div>
    </div>
    <div class="form-actions">
        @Html.Partial("_ShowSaveEdit", "")
    </div>
}
@*</div>*@
<script type="text/javascript" src="/Content/assets/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
<script type="text/javascript" src="/Content/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>
