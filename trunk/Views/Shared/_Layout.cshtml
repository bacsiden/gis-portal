<body>
    <div id="boxed">
        <section>
            <!-- Top bar -->
            <div class="navbar-wrapper">
                <div class="container">
                    @*<div class="logo">
                        <a class="brand" href="#"><img src="/buzz/img/logo.png" alt="" /><span class="icon-rocket header-icon"></span></a>
                    </div>*@
                    <div class="follower">
                        <ul>
                            <li>
                                <a class="fr" href="/Post/DangTin?hidefilter=1"><span class="add"></span>Đăng tin</a>
                            </li>
                            <li><a class="" href="/Post/AdminIndex"><span class="icon-cog"></span></a></li>
                        </ul>
                    </div>
                    <div id="main-menu">
                        <ul class="sf-menu color-m">
                            @{
                                var lst = NationalIT.DB.Entities.Menu.Where(m => m.Activated).ToList();
                                foreach (var item in lst)
                                {
                                    if (item.ParentID == 0)
                                    {
                                        <li>
                                            <a href="@item.Url">@item.Title</a>
                                            <ul>
                                            @foreach (var item1 in lst.Where(m => m.ParentID == item.ID))
                                            {
                                                <li><a href="@item1.Url" class="color">@item1.Title</a></li>
                                            }
                                            </ul>
                                        </li>
                                    }
                                }
                            }
                            
                        </ul>
                    </div>
                </div>
            </div>
            <!-- banner -->
            <div class="carousel slide small-slider " id="small_slider">
                <div class="carousel-inner">
                  <div class="item active">
                    <img alt="" src="/buzz/images/banner-1.jpg">
                    <div class="container">
                        <div class="carousel-caption">
						    <h3 class="h3Blue">Sàn giao dịch lớn nhất Thái Nguyên</h3>
                            <h3 class="h3Blue" >Mua bán bất động sản chính chủ giá tốt nhất</h3>
                            <h3 class="h3Green" >Nhà chính chủ, chìa khóa trao tay</h3>
                            <h3 class="h3Red" >SĐT: 098765432</h3>
                            <h3 class="h3Red" >@("Email: abc@gmail.com")</h3>
                        </div>
                    </div>
                  </div>
                  <div class="item">
                    <img alt="" src="/buzz/images/banner-2.jpg">
                    <div class="container">
                        <div class="carousel-caption">
						    <h3 class="h3white">Sàn giao dịch lớn nhất Thái Nguyên</h3>
                            <h3 class="h3white" >Mua bán bất động sản chính chủ giá tốt nhất</h3>
                            <h3 class="h3Green" >Nhà chính chủ, chìa khóa trao tay</h3>
                            <h3 class="h3Red" >SĐT: 098765432</h3>
                            <h3 class="h3Red" >@("Email: abc@gmail.com")</h3>
                        </div>
                    </div>
                  </div>
                </div>
                <a data-slide="prev" href="#small_slider" class="left carousel-control"><span class="icon-arrow-left-7"></span></a>
                <a data-slide="next" href="#small_slider" class="right carousel-control"><span class="icon-untitled-2"></span></a>
            </div>
            <div class="col-wrap  portfolio-page">
                <div class="container ">
                    <div class="row-fluid no-mar">
                        <div class="span9">
                        @if (Request.QueryString["HideFilter"] == null)
                        {
                            var hinhthuc = Request.QueryString["hinhthuc"];
                            var khuvuc = Request.QueryString["khuvuc"];
                            var loaiID = Request.QueryString["loaiID"];
                            <div class="span12">
                            <div class="span4">
                            <span class="color-filter">Lọc BĐS theo khu vực</span>
                            <select class="filter-post select-khuvuc">
                                <option value="">Tất cả</option>
                            @foreach (var item in NationalIT.DB.Entities.District.ToList())
                            {
                                    <option value="@item.ID" @(item.ID+""==khuvuc?"selected":"")>@item.Title</option>
                            }
                            </select>
                            </div>
                            <div class="span4">
                            <span class="color-filter">Lọc theo loại BĐS</span>
                            <select class="filter-post select-loai">
                                <option value="">Tất cả</option>
                                @foreach (var item in NationalIT.DB.Entities.LoaiBDS.ToList())
                                {
                                    <option value="@item.ID" @(item.ID+""==loaiID?"selected":"")>@item.Title</option>
                                }
                            </select>
                            </div>
                            <div class="span4">
                            <span class="color-filter">Lọc BĐS theo hình thức</span>
                            <select class="filter-post select-hinhthuc">
                                <option value="">Tất cả</option>
                                <option @(hinhthuc == "1" ? "selected = \"selected\"" : "") value="1">Cần bán</option>
                                <option @(hinhthuc == "2" ? "selected = \"selected\"" : "") value="2">Cần mua</option>
                                @*<option @(hinhthuc == "3" ? "selected = \"selected\"" : "") value="3">Cho thuê</option>*@
                            </select>
                            </div>
                            </div>
                        }
                        <div id="wrap-AjaxPaging">
                            @RenderBody()
                        </div>
                        </div>
                        <div class="span3">
                            <div class="widget">
                                <div class="header-widget">
                                    <h3 class="title-h3">Bất động sản xem nhiều</h3>  
                                </div>                              
                                <ul>
                                    @foreach (var item in NationalIT.DB.Entities.Post.Where(m => m.Status == (int)NationalIT.PostStatus.Enabled).OrderByDescending(m => m.ViewCount).Take(5).ToList())
                                    {
                                    <li>
                                    @*<a href="@Url.Action("Details", "Post", new { id = item.ID, h3Title="Bất động sản xem nhiều" })">
                                            <img src="@(item.ImagePost.Count > 0 ? item.ImagePost.FirstOrDefault().Url : "/buzz/images/building-icon.jpg")" width="50"/></a>*@
                                        <a href="@Url.Action("Details", "Post", new { id = item.ID, h3Title = "Bất động sản xem nhiều" })">@item.Title</a></li>
                                    }
                                </ul>
                            </div>
                            <div class="widget">
                                <div class="header-widget">
                                    <h3 class="title-h3">Bất động sản nổi bật</h3>  
                                </div>                                
                                <ul>
                                    @foreach (var item in NationalIT.DB.Entities.Post.Where(m => m.Hot && m.Status == (int)NationalIT.PostStatus.Enabled).Take(5).ToList())
                                    {
                                    <li><a href="@Url.Action("Details", "Post", new { id = item.ID, h3Title = "Bất động sản nổi bật" })">
                                            <img src="@(item.ImagePost.Count > 0 ? item.ImagePost.FirstOrDefault().Url : "/buzz/images/building-icon.jpg")" width="50"/></a>
                                        <a href="@Url.Action("Details", "Post", new { id = item.ID, h3Title = "Bất động sản nổi bật" })">@item.Title</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footerbox col-shadow">
                <div class="container">
                    <div class="fbox">
                        <address>
                            <p><span class="icon"></span>VŨ THÀNH VINH</p>
                            <p><span class="icon-house"></span>Xã Quyết Thắng, P. Thịnh Đán, Thái Nguyên</p>
                            <p><span class="icon-phone"></span>+124 6556 7890</p>
                            <p><span class="icon-mail"></span>hello@themeapt.com</p>
                        </address>	<!--fpost_close-->

                    </div>	<!--fpost_close-->

                    <div class="clear"></div>

                </div><!--Wrap_close-->
            </div>
        </section>
